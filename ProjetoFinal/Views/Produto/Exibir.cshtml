@model Produto
@{
    ViewData["Title"] = "Informações do Produto";
}

<div class="text-center">
    <input type="hidden" asp-for="Id" />

    <h1 class="display-4">Informações do Produto</h1>

    <table class="table">
        <thead class=" table-dark">
            <tr>
                <th scope="col" class="text-center"> # </th>
                <th scope="col" class="text-center"> Categoria </th>
                <th scope="col" class="text-center"> Produto </th>
                <th scope="col" class="text-center"> Sabor </th>
                <th scope="col" class="text-center"> Tipo </th>
                <th scope="col" class="text-center"> Recipiente </th>
                <th scope="col" class="text-center"> Peso </th>
                <th scope="col" class="text-center"> Quantidade </th>
                <th scope="col" class="text-center"> Preço </th>
                <th scope="col" class="text-center"> Fornecedor </th>
                <th scope="col" class="text-center"> Código-Barra </th>
                <th scope="col" class="text-center"> Data-Cadastrado </th>
                <th scope="col" class="text-center"> Ação </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row" class="text-center">#</th>
                <td class="text-center"> @Model.Categoria </td>
                <td class="text-center"> @Model.NomeProduto </td>
                <td class="text-center"> @Model.Sabor </td>
                <td class="text-center"> @Model.Tipo </td>
                <td class="text-center"> @Model.Recipiente </td>
                <td class="text-center"> @Model.Peso </td>
                <td class="text-center"> @Model.Qtd </td>
                <td class="text-center"> R$ @Model.Preco </td>
                <td class="text-center"> @Model.NomeFornecedor </td>
                <td class="text-center"> @Model.CodBarra </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => Model.DataCadastro)</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-success" asp-route-id="@Model.Id" asp-controller="Produto" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Produto" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-secondary btn-block" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
</div>
